# Create project directory
mkdir skin-disease-classification
cd skin-disease-classification

# Create folder structure
mkdir data, data\raw, data\raw\dataset1, data\raw\dataset2
mkdir data\combined, data\augmented, data\processed
mkdir notebooks, src, outputs, outputs\eda_plots, outputs\models

# Create virtual environment
python -m venv venv
.\venv\Scripts\Activate

# Install required packages
pip install numpy pandas matplotlib seaborn scikit-learn opencv-python Pillow tqdm scikit-image joblib imbalanced-learn albumentations
pip install opendatasets  # for Kaggle download (optional)

# Save requirements
pip freeze > requirements.txt